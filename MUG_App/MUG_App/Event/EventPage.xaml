<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MUG_App.Event.EventPage"
             Title="Events">
    <ListView ItemsSource="{Binding Items}"
              HasUnevenRows="True"
            ItemTapped="Handle_ItemTapped"
            ItemSelected="Handle_ItemSelected"
            IsPullToRefreshEnabled="true"
            CachingStrategy="RecycleElement"
            IsRefreshing="{Binding IsBusy, Mode=OneWay}"
            RefreshCommand="{Binding RefreshDataCommand}">
    
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="20">
                    <Label Text="{Binding Title}" FormattedText="Bold" FontSize="20"/>
                    <Label Text="{Binding YesRsvpCount}" FontSize="14"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
   
  </ListView>
</ContentPage>
